<div class="container mt-5">
   <div class="container form-container">
     <%= simple_form_for(@product) do |f| %>
      <p>Modifiez le prix TTC de ce produit</p>
       <div class="form-top">
         <%= f.number_field :price, label: "Quelle somme en cents ? (on va essayer de modifier)", placeholder: 0%>
       </div>
       <div class="btn btn-primary">
        <%= f.submit "Soumettre", class: 'btn btn-contact'%>
       </div>
     <% end %>
   </div>
</div>
