

<!-- Modal -->
<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="container">
          <h2>Se connecter</h2>

          <%= simple_form_for(@new_user, as: :user, url: session_path(:user)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean %>
            </div>

            <div class="form-actions mb-3">
              <%= f.button :submit, "Log in", class: "btn-red w-100" %>
            </div>
          <% end %>
          <%= link_to "Créer mon compte", new_registration_path(:user) %><br />
          <%= link_to "Mot de passe oublié?", new_password_path(:user) %><br />
        </div>
      </div>
    </div>
  </div>
</div>
