<div class="container">
  <h2> Mes Marques & Vêtements</h2>
  <div style="width: 100%; display:flex; justify-content: space-around;">
    <%= link_to 'retour au Menu', root_path, class: "btn btn-success"%>
    <%= link_to "Retour aux fournisseurs", fournisseurs_path, class: "button-return"%>
    <% if Selection.all.count > 0 %>
      <% @selection = Selection.last %>
      <%= link_to 'Revenir à la dernière sélection',selection_path(@selection), class: "button-return"%>
    <% end %>
  </div>
  <br>
  <div style="width: 100%; display:flex; justify-content: space-around;">
    <%= link_to 'Ajouter une marque', new_brand_path, class: "button-ts"%>
    <%= link_to 'Ajouter un vêtement', new_clothe_path, class: "button-ts"%>
    <%= link_to 'Ajouter une couleur', new_color_path, class: "button-ts"%>
  </div>
  <br>
  <div style="width: 100%; display:flex; justify-content: space-around;">
    <div class="fiche_listing bg_list1">
      <% if Brand.all.count == 0 %>
        <p>Aucune marque n'est créée actuellement.</p>
      <% else %>
        <h2>Les Marques</h2>
        <% @brands.each do |brand| %>
          <div class="fiche_column">
            <div><%= brand.name %></div>
            <div><%= link_to 'X', brand_path(brand), method: :delete, class: "button-red"%></div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="fiche_listing bg_list2">
      <% if Clothe.all.count == 0 %>
        <p>Aucun vêtement n'est créée actuellement.</p>
      <% else %>
        <h2>Les Vêtements</h2>
        <% @clothes.each do |clothe| %>
          <div class="fiche_column">
            <div><%= clothe.name %></div>
            <div><%= link_to 'X', clothe_path(clothe), method: :delete, class: "button-red"%></div>
          </div>
        <% end %>
      <% end %>
    </div>
        <div class="fiche_listing bg_list3">
      <% if Color.all.count == 0 %>
        <p>Aucune couleur n'est créée actuellement.</p>
      <% else %>
        <h2>Les Couleurs</h2>
        <% @colors.each do |color| %>
          <div class="fiche_column">
            <div><%= color.name %></div>
            <div><%= link_to 'X', color_path(color), method: :delete, class: "button-red"%></div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
